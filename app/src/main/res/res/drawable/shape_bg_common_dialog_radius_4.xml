<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充的颜色 -->
    <solid android:color="@color/color_00000000" />

    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/dp_4" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="@dimen/dp_10"
        android:left="@dimen/dp_10"
        android:right="@dimen/dp_10"
        android:top="@dimen/dp_10" />
    <!--设置边框线的宽度和颜色-->
    <stroke android:width="@dimen/dip1" android:color="@color/color_D2D3DB" />
</shape>