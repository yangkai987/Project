<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.membership_score.widgetlib.widget.TitleBar
            android:id="@+id/tb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_show_backicon="true"
            app:title_text="会员详情" />
    <View
            android:layout_below="@+id/tb_title"
            android:id="@+id/view_1"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_below="@+id/view_1"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:id="@+id/tv_1"
                android:text="会员姓名"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.membership_score.widgetlib.widget.ClearEditText
                android:id="@+id/et_updata_member_name"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:maxLength="11"
                android:drawablePadding="@dimen/dip15"
                android:gravity="center|right"
                android:layout_marginLeft="@dimen/dip15"
                android:layout_toRightOf="@+id/tv_1"
                android:textColor="@color/colorMain"
                android:textColorHint="@color/color_CCCCCC"
                android:hint="请输入姓名"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>
    <View
            android:id="@+id/view_2"
            android:layout_below="@+id/rl_1"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_below="@+id/view_2"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:id="@+id/tv_2"
                android:text="会员手机号码"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.membership_score.widgetlib.widget.ClearEditText
                android:id="@+id/et_updata_member_phoen"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:drawablePadding="@dimen/dip15"
                android:maxLength="11"
                android:gravity="center|right"
                android:layout_marginLeft="@dimen/dip15"
                android:layout_toRightOf="@+id/tv_2"
                android:textColor="@color/colorMain"
                android:textColorHint="@color/color_CCCCCC"
                android:hint="请输入手机号码"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>
    <View
            android:layout_below="@+id/rl_2"
            android:id="@+id/view_3"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:layout_below="@+id/view_3"
            android:id="@+id/rl_3"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:text="会员性别"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_add_member_sex"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:id="@+id/view_4"
            android:layout_below="@+id/rl_3"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_below="@+id/view_4"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:id="@+id/tv_3"
                android:text="会员详细地址"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/et_add_member_address"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:maxLength="11"
                android:gravity="center|right"
                android:layout_marginLeft="@dimen/dip15"
                android:layout_toRightOf="@+id/tv_3"
                android:textColor="@color/colorMain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
    </RelativeLayout>
    <View
            android:id="@+id/view_5"
            android:layout_below="@+id/rl_4"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_below="@+id/view_5"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:id="@+id/tv_4"
                android:text="会员总积分"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_member_total"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:maxLength="11"
                android:gravity="center|right"
                android:layout_marginLeft="@dimen/dip15"
                android:layout_toRightOf="@+id/tv_4"
                android:textColor="@color/colorMain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
    </RelativeLayout>
    <View
            android:id="@+id/view_6"
            android:layout_below="@+id/rl_5"
            style="@style/line_h_1"/>

    <LinearLayout
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_add_one_member_ship"
                android:layout_width="match_parent"
                android:text="添加积分"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_weight="1.0"
                android:background="@color/color_4C545B"
                android:textColor="@color/color_FFFFFF"
                android:layout_height="@dimen/dip100"/>
        <TextView
                android:id="@+id/tv_updata_one_member"
                android:layout_width="match_parent"
                android:text="修改资料"
                android:gravity="center"
                android:layout_weight="1.0"
                android:textSize="@dimen/sp_16"
                android:background="@color/color_4C545B"
                android:textColor="@color/color_FFFFFF"
                android:layout_height="@dimen/dip100"/>
        <TextView
                android:id="@+id/tv_delect_one_member"
                android:layout_width="match_parent"
                android:text="删除会员"
                android:gravity="center"
                android:layout_weight="1.0"
                android:textSize="@dimen/sp_16"
                android:background="@color/color_4C545B"
                android:textColor="@color/color_FFFFFF"
                android:layout_height="@dimen/dip100"/>
        <TextView
                android:id="@+id/tv_select_all_member_ship_list"
                android:layout_width="match_parent"
                android:text="查询记录"
                android:gravity="center"
                android:layout_weight="1.0"
                android:textSize="@dimen/sp_16"
                android:background="@color/color_4C545B"
                android:textColor="@color/color_FFFFFF"
                android:layout_height="@dimen/dip100"/>
    </LinearLayout>
</RelativeLayout>














