<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_layout_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.membership_score.widgetlib.widget.TitleBar
            android:id="@+id/tb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_show_backicon="true"
            app:title_text="添加会员积分" />
    <View
            android:layout_below="@+id/tb_title"
            android:id="@+id/view_1"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_below="@+id/view_1"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:id="@+id/tv_1"
                android:text="充值金额"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.membership_score.widgetlib.widget.ClearEditText
                android:id="@+id/et_recharge_member_ship_pay_money"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:maxLength="11"
                android:drawablePadding="@dimen/dip15"
                android:gravity="center|right"
                android:layout_marginLeft="@dimen/dip15"
                android:layout_toRightOf="@+id/tv_1"
                android:textColor="@color/colorMain"
                android:textColorHint="@color/color_CCCCCC"
                android:hint="请输入充值金额"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>
    <View
            android:id="@+id/view_2"
            android:layout_below="@+id/rl_1"
            style="@style/line_h_1"/>
    <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_below="@+id/view_2"
            android:paddingLeft="@dimen/dip50"
            android:paddingRight="@dimen/dip50"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100">
        <TextView
                android:id="@+id/tv_2"
                android:text="会员支付类型"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_4C545B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_pay_type"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_16"
                android:drawablePadding="@dimen/dip15"
                android:maxLength="11"
                android:gravity="center|right"
                android:layout_marginLeft="@dimen/dip15"
                android:layout_toRightOf="@+id/tv_2"
                android:textColor="@color/colorMain"
                android:textColorHint="@color/color_CCCCCC"
                android:hint="请选择支付类型"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>
    <View
            android:layout_below="@+id/rl_2"
            android:id="@+id/view_3"
            style="@style/line_h_1"/>
    <TextView
            android:id="@+id/tv_add_one_member_ship_sure"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:text="确定"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dip50"
            android:layout_weight="1.0"
            android:background="@color/color_4C545B"
            android:textColor="@color/color_FFFFFF"
            android:layout_height="@dimen/dip100"/>
</RelativeLayout>














