<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.membership_score.widgetlib.widget.TitleBar
            android:id="@+id/tl_layout_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_show_backicon="true"
            app:title_text="修改密码" />
    <View
            android:id="@+id/view_modify"
            android:layout_below="@+id/tl_layout_modify"
            style="@style/line_h_1"
    />
    <LinearLayout
            android:layout_below="@+id/view_modify"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:paddingLeft="@dimen/dip50"
                android:paddingRight="@dimen/dip50"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip100">
            <TextView
                    android:id="@+id/tv_1_modify"
                    android:text="原始密码"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_E84D61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.membership_score.widgetlib.widget.ClearEditText
                    android:id="@+id/et_member_old_modify"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="11"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/dip15"
                    android:layout_toRightOf="@+id/tv_1_modify"
                    android:textColor="@color/colorMain"
                    android:textColorHint="@color/color_CCCCCC"
                    android:hint="请输入原始密码"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </RelativeLayout>
        <View   style="@style/line_h_1"/>
        <RelativeLayout
                android:paddingLeft="@dimen/dip50"
                android:paddingRight="@dimen/dip50"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip100">
            <TextView
                    android:id="@+id/tv_2"
                    android:text="新密码"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_E84D61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.membership_score.widgetlib.widget.ClearEditText
                    android:id="@+id/et_member_new_modify_pw_one"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:drawablePadding="@dimen/dip15"
                    android:gravity="center|right"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/tv_2"
                    android:textColor="@color/colorMain"
                    android:textColorHint="@color/color_CCCCCC"
                    android:hint="请输入新密码"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
        <View   style="@style/line_h_1"/>
        <RelativeLayout
                android:paddingLeft="@dimen/dip50"
                android:paddingRight="@dimen/dip50"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip100">
            <TextView
                    android:id="@+id/tv_3_modify"
                    android:text="再次确认密码"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_E84D61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.membership_score.widgetlib.widget.ClearEditText
                    android:id="@+id/et_member_new_modify_pw_two"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:drawablePadding="@dimen/dip15"
                    android:gravity="center|right"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/tv_3_modify"
                    android:textColor="@color/colorMain"
                    android:textColorHint="@color/color_CCCCCC"
                    android:hint="请再次输入新密码"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
        <View   style="@style/line_h_1"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_add_member_modify_pw_sure"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:text="确认修改"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dip50"
            android:background="@color/color_4C545B"
            android:textColor="@color/color_FFFFFF"
            android:layout_height="@dimen/dip100"/>
</RelativeLayout>














