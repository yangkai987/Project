<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义标题栏 -->
    <declare-styleable name="TitleBar">
        <attr name="title_text" format="string" />
        <attr name="title_right_text" format="string" />
        <attr name="title_background" format="color" />
        <attr name="title_show_backicon" format="boolean" />
        <attr name="title_right_icon" format="reference" />
    </declare-styleable>

    <!-- 圆形图片控件 -->
    <declare-styleable name="RoundImageView">
        <attr name="all_radius" format="dimension" />
        <attr name="top_left_radius" format="dimension" />
        <attr name="top_right_radius" format="dimension" />
        <attr name="bottom_left_radius" format="dimension" />
        <attr name="bottom_right_radius" format="dimension" />
    </declare-styleable>

    <!-- 状态页面 -->
    <declare-styleable name="LoadingView">
        <!--初始状态 0：刷新，1：显示内容，2：网络错误，3：空页面，4：其它错误 -->
        <attr name="loading_init_type" format="integer" />
        <attr name="loading_background" format="reference" />
        <attr name="loading_empty_icon" format="reference" />
        <attr name="loading_empty_center_msg" format="string" />
        <attr name="loading_empty_bottom_bt_msg" format="string" />
        <attr name="loading_error_icon" format="reference" />
        <attr name="loading_error_center_msg" format="string" />
        <attr name="loading_error_bottom_bt_msg" format="string" />
        <attr name="loading_top_padding" format="dimension" />
        <attr name="loading_bottom_padding" format="dimension" />
    </declare-styleable>

    <!--圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
</resources>




